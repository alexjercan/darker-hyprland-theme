{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 0,
  "margin-left": 4,
  "margin-right": 4,
  "spacing": 0,
  "modules-left": [
    "hyprland/workspaces",
    "hyprland/window",
  ],
  "modules-center": ["clock"],
  "modules-right": [
    "custom/weather",
    "custom/updates",
    "custom/tasks",
    "cpu",
    "memory",
    "disk",
    "battery",
    "network",
    "bluetooth",
    "idle_inhibitor",
    "backlight",
    "pulseaudio",
    "tray",
  ],
  "hyprland/workspaces": {
    "format": "{name}",
    "disable-scroll": true,
    "all-outputs": true,
    "on-click": "activate",
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
  },
  "hyprland/window": {
    "format": "ÔÖ∫  {}",
    "max-length": 35
  },
  "clock": {
    "interval": 1,
    "format": "{:%b %d %Y - %H:%M}",
    "tooltip-format": "{:ÔÅ≥ %A %d/%m/%Y %T}"
  },
  "custom/weather": {
    "tooltip": true,
    "format": "{}",
    "interval": 3600,
    "exec": "wttrbar",
    "return-type": "json"
  },
  "custom/updates": {
    "format": "ü°ª {}",
    "interval": 7200,
    "exec": "i=$(checkupdates); echo \"$i\" |wc -l; echo \"$i\" |column -t |tr '\n' '\r'",
    "exec-if": "exit 0",
    "on-click": "kitty -e sudo pacman -Syu",
    "signal": 8
  },
  "custom/tasks": {
    "format": "ÔÄå {}",
    "interval": 60,
    "exec": "daily.sh",
    "tooltip": true,
    "tooltip-format": "{}",
    "return-type": "json"
  },
  "cpu": {
    "interval": 1,
    "format": "Ôíº {usage}%",
    "on-click": "kitty --start-as=fullscreen --title htop sh -c 'htop'"
  },
  "memory": {
    "interval": 1,
    "format": "Ôãõ {}%",
    "tooltip": true,
    "tooltip-format": "Memory - {used:0.1f}GB used",
    "on-click": "kitty --start-as=fullscreen --title htop sh -c 'htop'"
  },
  "disk": {
    "interval": 1,
    "format": "Û∞ãä {percentage_used}%",
    "path": "/",
    "format-alt-click": "click-right",
    "format-alt": "Û∞ãä {percentage_used}%",
    "tooltip": true,
    "tooltip-format": "Disk - {used} used out of {total} on {path} ({percentage_used}%)",
    "on-click": "kitty --start-as=fullscreen --title htop sh -c 'htop'"
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 20
    },
    "format": "{icon} {capacity}%",
    "format-charging": "Ôá¶ {capacity}%",
    "format-plugged": "Ôá¶ {capacity}%",
    "format-alt": "{time} {icon}",
    "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"]
  },
  "network": {
    "format-wifi": "Ôá´ {signalStrength}%",
    "format-ethernet": "ÔÉÅ",
    "tooltip-format": "{ifname} {ipaddr}/{cidr} via {gwaddr} Ôëå",
    "format-linked": "{ifname} Ôëå",
    "format-disconnected": "‚ö†",
    "format-alt": "{ifname}",
    "max-length": 50
  },
  "bluetooth": {
    "format": "Ôäî",
    "format-disabled": "‚äù",
    "format-connected": "Ôäî {num_connections}",
    "tooltip-format": "{device_alias}",
    "tooltip-format-connected": "Ôäî {device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}",
    "on-click": "blueman-manager"
  },
  "idle_inhibitor": {
    "format": "{icon}",
      "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
    }
  },
  "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
    "on-scroll-up": "swayosd-client --brightness 10",
    "on-scroll-down": "swayosd-client --brightness -10",
    "min-length": 6
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "ÔÄ¶ Muted",
    "on-click": "pavucontrol",
    "on-click-right": "swayosd-client --output-volume mute-toggle",
    "on-scroll-up": "swayosd-client --output-volume 5",
    "on-scroll-down": "swayosd-client --output-volume -5",
    "scroll-step": 5,
    "format-icons": {
      "headphone": "ÔÄ•",
      "hands-free": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
    },
    "tooltip": true,
    "tooltip-format": "{icon} at {volume}%"
  },
  "tray": {
    "icon-size": 13,
    "spacing": 10
  },
}
